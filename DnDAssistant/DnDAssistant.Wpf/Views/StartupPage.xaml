<local:BasePage x:Class="DnDAssistant.Wpf.StartupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DnDAssistant.Wpf"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      >
    <!-- TODO: Make background blur the mainwindow background image -->
    <Grid Background="{StaticResource WhiteBrush}">

        <ItemsControl ItemsSource="{Binding}" Padding="60 90">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <local:Widget />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Background="{StaticResource BlueBrush}" 
                                 Rows="4" 
                                 Columns="5"
                                 />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>

    </Grid>
</local:BasePage>
