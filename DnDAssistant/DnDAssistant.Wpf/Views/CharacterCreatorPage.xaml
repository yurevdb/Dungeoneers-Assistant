<local:BasePage x:Class="DnDAssistant.Wpf.CharacterCreatorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DnDAssistant.Wpf"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      >

    <Grid>
        <local:PageHost DataContext="{Binding CharacterCreatorPageViewModel.CurrentCreatorPage, Source={x:Static local:ViewModelLocator.Instance}, Converter={local:CharacterCreatorPageToPageConverter}}"
                        CurrentPage="{Binding}"/>
    </Grid>
</local:BasePage>
