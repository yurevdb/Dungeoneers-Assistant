<UserControl x:Class="DnDAssistant.Wpf.NumberSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DnDAssistant.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Border Padding="5">
        <Grid Background="{StaticResource SmokeWhiteBrush}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox Style="{StaticResource LineTextBox}" Grid.Column="0" />

            <StackPanel Grid.Column="1">
                <Button Style="{StaticResource UpButton}" Width="10" Height="10"/>
                <Button Style="{StaticResource DownButton}" Width="10" Height="10"/>
            </StackPanel>

        </Grid>
    </Border>
</UserControl>
