<UserControl x:Class="DnDAssistant.Wpf.NavigationMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DnDAssistant.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <Border BorderBrush="{StaticResource BronzeBrush}"
            BorderThickness="5"
            >
        <!-- Border children grid -->
        <Grid>
            <Path HorizontalAlignment="Stretch"
                  Fill="{StaticResource BronzeBrush}"
                  Data="{Binding RelativeSource={RelativeSource AncestorType=local:NavigationMenu}, Converter={local:WidthToNavigationCenterLineConverter}}"/>

            <Grid Background="{StaticResource BronzeBrush}"
                  Opacity="0.6">


            <!-- For displaying the buttons -->
            <ItemsControl ItemsSource="{Binding Items}">

                <!-- Style the items (The navigation buttons) -->
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                    
                    

                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>



            </Grid>
        </Grid>
    </Border>

</UserControl>
