<Window x:Class="DnDAssistant.Wpf.CampaignSelect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DnDAssistant.Wpf"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        Closing="Window_Closing"
        Title="CampaignSelect" Height="675" Width="1200">
    
    <Grid Background="{StaticResource SmokeWhiteBrush}" >


        <TextBlock x:Name="tbInspirationText"
                   TextWrapping="Wrap"
                   TextAlignment="Right"
                   Width="350"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Text="Choose Your Campaign"
                   FontSize="{StaticResource FontsizeForFancyFontLarge}"
                   FontFamily="{StaticResource Fancy}"
                   Foreground="{StaticResource RedBrush}"
                   />


        <!--A button to go directly to the main window, only used to debug-->
        <Button x:Name="btn" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="50" Height="50" Content="Skip" Click="Button_Click"/>
        
    </Grid>
    
</Window>
