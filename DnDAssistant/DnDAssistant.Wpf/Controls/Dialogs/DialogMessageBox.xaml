<local:BaseDialogUserControl x:Class="DnDAssistant.Wpf.DialogMessageBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DnDAssistant.Wpf"
             mc:Ignorable="d" >
    
    <StackPanel Background="{StaticResource WhiteBrush}">
        
        <TextBlock Text="{Binding Message}" Padding="5"/>

        <Button Content="{Binding OkText}"
                FontSize="{StaticResource FontsizeRegular}"
                HorizontalAlignment="Center"
                Command="{Binding CloseCommand, RelativeSource={RelativeSource AncestorType=local:BaseDialogUserControl}}"/>

    </StackPanel>
    
</local:BaseDialogUserControl>
