<Window x:Class="DnDAssistant.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DnDAssistant.Wpf"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Style="{StaticResource CustomWindowStyle}"
        Title="Dungeoneers Assistant" 
        Height="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        Width="700">


    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="{Binding CaptionHeight}"/>
    </WindowChrome.WindowChrome>
    
    <!-- Set the interactability of elements around or in the window -->
    <!-- THIS IS VERY FUCKING IMPORTANT: DO NOT REMOVE -->
    <WindowChrome.IsHitTestVisibleInChrome>
        <sys:Boolean>True</sys:Boolean>
    </WindowChrome.IsHitTestVisibleInChrome>

    <!-- Content -->
    <Grid>

        <!--<TextBlock Background="White" />-->

    </Grid>
</Window>
