<Window x:Class="DnDAssistant.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DnDAssistant.Wpf"
        mc:Ignorable="d"
        Style="{StaticResource CustomWindowStyle}"
        Title="Dungeoneers Assistant" 
        Height="450"
        Width="700"
        ShowInTaskbar="True"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        >


    <!--#region Custom Window-->

    <WindowChrome.WindowChrome>
        <WindowChrome
            CaptionHeight="{Binding TitleHeight}"
            ResizeBorderThickness="{Binding ResizeBorderThickness}"/>
    </WindowChrome.WindowChrome>

    <!--#endregion-->
    
   <!--#region Content-->

    <Grid>
        
        <!--#region Overlays and Menus-->
        
        <!-- Popup Overlay for closing any popup of the window -->
        <Border Background="Transparent"
                Panel.ZIndex="1"
                Visibility="{Binding AnyPopupVisible, Converter={local:BooleanToVisibilityConverter}}">
            <Border.InputBindings>
                <MouseBinding MouseAction="LeftClick" Command="{Binding PopupClickawayCommand}"/>
            </Border.InputBindings>
        </Border>

        <!-- Application Menu -->
        <local:MenuControl VerticalAlignment="Top"
                           Visibility="Hidden"
                           local:AnimateFadeInOut.Value="{Binding DataContext.ApplicationMenuVisible, RelativeSource={RelativeSource AncestorType=Window}}"
                           Panel.ZIndex="2"
                           DataContext="{Binding AppMenu}"
                           HorizontalAlignment="Left"
                           Width="275">

            <!-- Dropshadow effect -->
            <local:MenuControl.Effect>
                <DropShadowEffect BlurRadius="6"
                                  ShadowDepth="2"
                                  Color="Black"/>
            </local:MenuControl.Effect>
            
        </local:MenuControl>
        
        <!-- Dimmed Overlay -->
        <Border Opacity="0.3" 
                Panel.ZIndex="3">
            <Border Background="{StaticResource BlackBrush}"
                    Visibility="{Binding DimmableOverlayVisible, Converter={local:BooleanToVisibilityConverter}}"/>
        </Border>
        
        <!--#endregion-->
        
        <!--#region Actual Content-->

        <local:PageHost DataContext="{Binding ApplicationViewModel.CurrentPage, Source={x:Static local:ViewModelLocator.Instance}, Converter={local:ApplicationPageToPageConverter}}"
                        CurrentPage="{Binding}"/>

        <!--#endregion-->

    </Grid>
    
    <!--#endregion-->

</Window>
