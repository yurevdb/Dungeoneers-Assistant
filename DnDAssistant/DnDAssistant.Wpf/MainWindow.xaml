<Window x:Class="DnDAssistant.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DnDAssistant.Wpf"
        mc:Ignorable="d"
        Title="Dungeoneers Assistant"
        WindowStyle="None"
        AllowsTransparency="True"
        MinHeight="{Binding MinimumWindowHeight}"
        MinWidth="{Binding MinimumWindowWidth}"
        ShowInTaskbar="True"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource CustomWindowStyle}"
        Height="675" Width="1200"
        >


    <!--#region Custom Window-->

    <WindowChrome.WindowChrome>
        <WindowChrome
            CaptionHeight="{Binding CaptionHeight}"
            ResizeBorderThickness="{Binding ResizeBorderThickness}"/>
    </WindowChrome.WindowChrome>

    <!--#endregion-->
    
   <!--#region Content-->

    <Grid>
        
        <!--#region Overlays and Menus-->

        <!-- Popup Overlay for closing any popup of the window -->
        <Border Background="Transparent"
                Panel.ZIndex="10"
                Visibility="{Binding ApplicationViewModel.AnyPopUpVisible, Source={x:Static local:ViewModelLocator.Instance}, Converter={local:BooleanToVisibilityConverter}}">
            <Border.InputBindings>
                <MouseBinding MouseAction="LeftClick" Command="{Binding PopupClickawayCommand}"/>
            </Border.InputBindings>
        </Border>
        
        <!--#endregion-->
        
        <!--#region Actual Content-->

        <Grid>
        
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- The navigation menu -->
            <local:NavigationMenu Grid.Column="0"
                                  Width="120"
                                  local:AnimateSlideInFromLeftProperty.Value="{Binding ApplicationViewModel.NavigationMenuVisible, Source={x:Static local:ViewModelLocator.Instance}}"
                                  Visibility="{Binding ApplicationViewModel.NavigationMenuVisible, Source={x:Static local:ViewModelLocator.Instance},Converter={local:BooleanToVisibilityConverter}}"
                                  />

            <!-- The page Host -->
            <local:PageHost DataContext="{Binding ApplicationViewModel.CurrentPage, Source={x:Static local:ViewModelLocator.Instance}, Converter={local:ApplicationPageToPageConverter}}"
                            CurrentPage="{Binding}" Grid.Column="1"/>

        </Grid>

        <!--#endregion-->

    </Grid>
    
    <!--#endregion-->

    <!-- The window key commands -->
    <Window.InputBindings>
        <KeyBinding Key="N" Modifiers="Shift" Command="{Binding ToggleNavigationCommand}"/>
        <KeyBinding Key="Esc" Command="{Binding PopupClickawayCommand}"/>
    </Window.InputBindings>

</Window>
