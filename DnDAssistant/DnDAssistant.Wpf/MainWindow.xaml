<Window x:Class="DnDAssistant.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DnDAssistant.Wpf"
        mc:Ignorable="d"
        Style="{StaticResource CustomWindowStyle}"
        Title="Dungeoneers Assistant" 
        Height="350"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Width="525"
        MinHeight="400"
        MinWidth="400">


    <WindowChrome.WindowChrome>
        <WindowChrome 
            ResizeBorderThickness="3"
            CaptionHeight="{Binding TitleHeight}"
            CornerRadius="0"
            GlassFrameThickness="0"
            />
    </WindowChrome.WindowChrome>
    
    <Grid>
        
        <!-- Background -->
        <Grid.Background>
            <ImageBrush ImageSource="pack://siteoforigin:,,,/Resources/Wallpaper.jpg" AlignmentX="Center" AlignmentY="Center" Stretch="UniformToFill"/>
        </Grid.Background>
        
    </Grid>
</Window>
