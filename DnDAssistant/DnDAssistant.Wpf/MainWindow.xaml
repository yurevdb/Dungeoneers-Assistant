<Window x:Class="DnDAssistant.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DnDAssistant.Wpf"
        mc:Ignorable="d"
        Style="{StaticResource CustomWindowStyle}"
        Title="Dungeoneers Assistant" 
        Height="450"
        Width="700"
        ShowInTaskbar="True"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        >

    <!--#region Custom Window-->

    <WindowChrome.WindowChrome>
        <WindowChrome
            CaptionHeight="{Binding CaptionHeight}"
            ResizeBorderThickness="{Binding ResizeBorderThickness}"/>
    </WindowChrome.WindowChrome>

    <!--#endregion-->
    
    <!--#region Content-->

    <Grid>

        <!-- Application Menu -->
        <local:MenuControl VerticalAlignment="Top"
                           Panel.ZIndex="10"
                           HorizontalAlignment="Left"
                           Width="250"
                           Visibility="{Binding ApplicationMenuVisible, Converter={local:BooleanToVisibilityConverter}}">
            <local:MenuControl.Effect>
                <DropShadowEffect BlurRadius="6"
                                  ShadowDepth="2"
                                  Color="Black"/>
            </local:MenuControl.Effect>
        </local:MenuControl>

    </Grid>
    
    <!--#endregion-->
    
</Window>
